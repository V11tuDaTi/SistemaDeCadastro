<!DOCTYPE html>
<html>
<head>
    <title>Gerenciar Alunos</title>
</head>
<body>
    <h1>Alunos</h1>
    <form action="/alunos" method="POST">
        <input type="text" name="nome" placeholder="Nome do Aluno" required>
        <input type="number" name="idade" placeholder="Idade" required>
        <input type="email" name="email" placeholder="Email" required>

        <h3>Selecione os cursos:</h3>
        <% cursos.forEach(curso => { %>
            <input type="checkbox" name="cursosInscritos" value="<%= curso.nome %>">
            <label><%= curso.nome %></label><br>
        <% }) %>

        <button type="submit">Adicionar Aluno</button>
    </form>

    <ul>
        <% alunos.forEach(aluno => { %>
            <li>
                <strong><%= aluno.nome %></strong> - <%= aluno.email %> - Cursos: <%= aluno.cursosInscritos.join(', ') %>
                <form action="/alunos/delete/<%= aluno.nome %>" method="POST" style="display:inline;">
                    <button type="submit">Excluir</button>
                </form>
            </li>
        <% }) %>
    </ul>

    <a href="/">Voltar ao In√≠cio</a>
</body>
</html>
